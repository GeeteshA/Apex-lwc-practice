        return AccountFactory.getInactiveAccountsQueryLocator(cutoffDate);
    }

    public void execute(Database.BatchableContext bc, List<Account> scope) {
        for (Account acc : scope) {
            acc.Inactive__c = true;
        }
        update scope;
    }

